def main():                                         #主函数就只负责处理命令行参数好了
    try:  
        opts, args = getopt.getopt(sys.argv[1:], "vhos:", ["version","help", "output=","scan="])  
    except getopt.GetoptError:  
        helper()
        exit()

    for o, a in opts:
        if o in ("-v","--version"):
            version()
        if o in ("-h", "--help"):
